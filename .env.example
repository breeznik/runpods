# RunPod LTX-2 Configuration
# Copy this file to .env and fill in your values

# RunPod Connection (get from pod details after creation)
RUNPOD_HOST=
RUNPOD_PORT=
RUNPOD_USER=root
SSH_KEY_PATH=~/.ssh/id_ed25519

# HuggingFace Token (required for gated models like Gemma)
# Create at: https://huggingface.co/settings/tokens
# Required permissions: "Read access to gated repos"
HF_TOKEN=

# RunPod API Key (for automated deployment)
# Get from: https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=

# Model Configuration (optional)
AUTO_DOWNLOAD_MODELS=true
COMFYUI_PORT=8888
